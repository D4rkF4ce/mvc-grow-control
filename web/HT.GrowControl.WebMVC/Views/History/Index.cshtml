@model HT.GrowControl.WebMVC.Models.HistoryViewModel
@{
    ViewBag.Title = "Historie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel">
            <div class="panel-body">
                <table class="table-striped" style="width:100%">
                    <thead style="font-weight:bold">
                        <tr>
                            <td>
                                DeviceID
                            </td>
                            <td>
                                Name
                            </td>
                            <td>
                                Wert
                            </td>
                            <td>
                                Zeitstempel
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (HT.GrowControl.Models.DataCollectorModel data in Model.CollectedData)
                        {
                            <tr>
                                <td>
                                    @data.DeviceId
                                </td>
                                <td>
                                    @data.Name
                                </td>
                                <td>
                                    @data.Value
                                </td>
                                <td>
                                    @data.TimeStamp
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

